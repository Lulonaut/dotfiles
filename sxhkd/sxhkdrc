XF86AudioPlay
	playerctl play-pause

XF86AudioNext
	playerctl next

XF86AudioPrev
	playerctl previous

XF86AudioLowerVolume
	pactl set-sink-volume 0 -1%

XF86AudioRaiseVolume
	pactl set-sink-volume 0 +1%

ctrl + Print
	flameshot screen -c

super + e 
	alacritty --command lf

super + b
	$BROWSER

super + Return
	alacritty

super + g
	thunar

XF86AudioMute
	pactl set-sink-mute 0 toggle

XF86Mail
	~/applications/bin/mail

super + alt + Left
	xdotool mousemove_relative -- -1 0

super + alt + Right
	xdotool mousemove_relative -- 1 0

super + alt + Up
	xdotool mousemove_relative -- 0 -1
	
super + alt + Down
	xdotool mousemove_relative -- 0 1

super + Down
	gtabst

#numpad 1
super + KP_End
	mbunofficialrelease super KP_End
